{
  "name": "generator-ansible-molecule",
  "description": "Yeoman generator to create ansible roles with molecule as a testing framework",
  "keywords": [
    "yeoman-generator",
    "generator",
    "ansible",
    "molecule"
  ],
  "license": "MIT",
  "author": "aaron <aaron.abm@gmail.com>",
  "repository": "https://github.com/Aaron-K-T-Berry/generator-ansible-molecule",
  "version": "0.0.0-development",
  "main": "index.js",
  "files": [
    "generators"
  ],
  "dependencies": {
    "chalk": "^4.1.1",
    "dot-prop": "^6.0.1",
    "git-config": "^0.0.7",
    "global": "^4.4.0",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "yeoman-environment": "^3.5.1",
    "yeoman-generator": "^5.4.0",
    "yo": "^4.2.0",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "semantic-release": "^17.4.4",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^6.2.0"
  },
  "resolutions": {
    "**/**/minimist": "^1.2.2",
    "**/**/kind-of": "^6.0.3",
    "**/**/dot-prop": "^5.1.1"
  },
  "scripts": {
    "commit": "git-cz",
    "yo-ansible-molecule": "node_modules/.bin/yo ansible-molecule ",
    "test": "node_modules/.bin/jest",
    "test-ci": "bash scripts/test-ci.sh",
    "test-dep": "snyk test",
    "semantic-release": "semantic-release",
    "lint": "eslint generators",
    "lint-fix": "eslint --fix generators"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "generators/**/*.{js}": [
      "yarn run lint-fix"
    ]
  }
}
